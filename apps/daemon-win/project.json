{
  "name": "daemon-win",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/daemon-win",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/cmd/daemon-win/main.go",
        "outputPath": "dist/apps/daemon-win"
      },
      "configurations": {
        "production": {
          "flags": ["-ldflags \"-X 'github.com/daytonaio/daemon-win/internal.Version=$VERSION'\""]
        }
      }
    },
    "build-windows": {
      "executor": "nx:run-commands",
      "options": {
        "command": "BUILD_NUM=$(apps/daemon-win/scripts/increment-build.sh) && BUILD_TIME=$(date -u +%Y-%m-%dT%H:%M:%SZ) && echo \"Building daemon-win build #$BUILD_NUM\" && CGO_ENABLED=0 GOOS=windows GOARCH=amd64 go build -ldflags \"-X 'github.com/daytonaio/daemon-win/internal.BuildNumber=$BUILD_NUM' -X 'github.com/daytonaio/daemon-win/internal.BuildTime=$BUILD_TIME'\" -o dist/apps/daemon-win.exe apps/daemon-win/cmd/daemon-win/main.go",
        "cwd": "."
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "{projectRoot}/scripts/deploy.sh"
      },
      "dependsOn": ["build-windows"]
    },
    "run-remote": {
      "executor": "nx:run-commands",
      "options": {
        "command": "{projectRoot}/scripts/run-remote.sh"
      },
      "dependsOn": ["build-windows"]
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "cmd": "gow",
        "cwd": ".",
        "main": "{projectRoot}/cmd/daemon-win/main.go"
      },
      "configurations": {
        "production": {}
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd {projectRoot} && go fmt ./..."
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    }
  }
}


