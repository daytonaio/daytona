{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "astro dev --host"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/public/**/*",
        "{projectRoot}/astro.config.*",
        "{projectRoot}/package.json",
        "{projectRoot}/tailwind.config.*",
        "{projectRoot}/tools/**/*",
        "{workspaceRoot}/dist/apps/api/openapi.json",
        "{workspaceRoot}/dist/apps/api/openapi.3.1.0.json",
        { "dependentTasksOutputFiles": "**/*", "transitive": true }
      ],
      "outputs": ["{workspaceRoot}/dist/apps/docs"],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "cp ../../apps/daemon/pkg/toolbox/docs/swagger.json ./public/toolbox-openapi.json",
          "astro build",
          "node ./tools/update-search.js",
          "node ./tools/update-llms.js"
        ],
        "parallel": false
      },
      "dependsOn": ["api:openapi"],
      "configurations": {
        "production": {
          "commands": [
            "cp ../../apps/daemon/pkg/toolbox/docs/swagger.json ./public/toolbox-openapi.json",
            "astro build --prod",
            "node ./tools/update-search.js",
            "node ./tools/update-llms.js"
          ]
        }
      }
    },
    "update-cli-reference": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "{projectRoot}/tools/**/*",
        "{workspaceRoot}/dist/apps/cli/**/*"
      ],
      "outputs": ["{projectRoot}/src/content/docs/en/cli/**/*"],
      "options": {
        "cwd": "{projectRoot}/tools",
        "command": "node ./update-cli-reference.js"
      }
    },
    "update-api-reference": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "{projectRoot}/tools/**/*",
        "{workspaceRoot}/dist/apps/api/openapi.json",
        "{workspaceRoot}/dist/apps/api/openapi.3.1.0.json",
        { "dependentTasksOutputFiles": "**/*", "transitive": true }
      ],
      "outputs": ["{projectRoot}/src/content/docs/en/api/**/*"],
      "options": {
        "cwd": "{projectRoot}/tools",
        "command": "node ./update-api-reference.js"
      },
      "dependsOn": ["api:openapi"]
    },
    "check-version-env": {},
    "docker": {
      "options": {
        "target": "docs",
        "build-args": [
          "VERSION=$VERSION",
          "PUBLIC_ALGOLIA_APP_ID=$PUBLIC_ALGOLIA_APP_ID",
          "PUBLIC_ALGOLIA_API_KEY=$PUBLIC_ALGOLIA_API_KEY",
          "PUBLIC_WEB_URL=$PUBLIC_WEB_URL",
          "PUBLIC_ALGOLIA_DOCS_INDEX_NAME=$PUBLIC_ALGOLIA_DOCS_INDEX_NAME",
          "PUBLIC_ALGOLIA_CLI_INDEX_NAME=$PUBLIC_ALGOLIA_CLI_INDEX_NAME",
          "PUBLIC_ALGOLIA_SDK_INDEX_NAME=$PUBLIC_ALGOLIA_SDK_INDEX_NAME"
        ]
      }
    },
    "push-manifest": {}
  },
  "implicitDependencies": ["api"]
}
