{
  "name": "opencode-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/opencode-plugin",
  "targets": {
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd {projectRoot} && prettier --write \"**/*.{ts,json,md}\" --config ../../.prettierrc"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project libs/opencode-plugin/tsconfig.json"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "inputs": ["default", "{projectRoot}/package.json"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/opencode-plugin",
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "packageJson": "{projectRoot}/package.json",
        "main": "{projectRoot}/.opencode/plugin/index.ts",
        "updateBuildableProjectDepsInPackageJson": true,
        "assets": ["{projectRoot}/README.md", "{projectRoot}/.npmignore"]
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["sdk-typescript", "toolbox-api-client"]
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/dist/libs/opencode-plugin",
        "command": "npm publish --access public --registry https://registry.npmjs.org/"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
