{
  "name": "sdk-ruby",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/sdk-ruby",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "bundle install"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "bundle exec rubocop"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "bundle exec rake spec"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "bundle exec rubocop -a --fail-level=E"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "gem build daytona-sdk.gemspec",
          "gem push daytona-sdk-*.gem --key rubygems --host https://rubygems.org"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "publish",
          "projects": ["api-client-ruby", "toolbox-api-client-ruby"]
        }
      ]
    }
  }
}

