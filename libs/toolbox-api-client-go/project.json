{
  "name": "toolbox-api-client-go",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/toolbox-api-client-go",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["goProduction", "^goProduction"],
      "outputs": [],
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["go mod download", "go build -v ./..."],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["go fmt ./...", "prettier --write '**/*.yaml'"],
        "parallel": false
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["go clean", "rm -rf dist"],
        "parallel": false
      }
    },
    "generate:api-client": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["apiClient"],
      "outputs": [
        "{projectRoot}/*.go",
        "{projectRoot}/go.mod",
        "{projectRoot}/go.sum",
        "{projectRoot}/api/openapi.yaml"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "rm -f *.go",
          "yarn run openapi-generator-cli generate --git-repo-id=daytona/libs/toolbox-api-client-go --git-user-id=daytonaio -i ../../apps/daemon/pkg/toolbox/docs/swagger.json -g go --additional-properties=packageName=toolbox,moduleVersion=$DEFAULT_PACKAGE_VERSION,generateInterfaces=true,enumClassPrefix=true,structPrefix=true -o ."
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "openapi",
          "projects": "daemon"
        }
      ]
    },
    "check-version-env": {},
    "set-version": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "{workspaceRoot}/libs/sdk-go/go.mod",
        { "env": "VERSION" },
        { "dependentTasksOutputFiles": "**/*", "transitive": true }
      ],
      "outputs": ["{workspaceRoot}/libs/sdk-go/go.mod"],
      "options": {
        "cwd": "{workspaceRoot}",
        "command": "cd libs/sdk-go && go mod edit -require=github.com/daytonaio/daytona/libs/toolbox-api-client-go@$VERSION"
      },
      "dependsOn": ["check-version-env"]
    }
  },
  "tags": []
}
