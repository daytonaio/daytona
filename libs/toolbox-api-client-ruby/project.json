{
  "name": "toolbox-api-client-ruby",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/toolbox-api-client-ruby",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["rm -f *.gem", "bundle install", "gem build daytona_toolbox_api_client.gemspec"],
        "parallel": false
      },
      "dependsOn": ["set-version"]
    },
    "set-version": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "if [ -n \"$RUBYGEMS_PKG_VERSION\" ] || [ -n \"$DEFAULT_PACKAGE_VERSION\" ]; then VER=${RUBYGEMS_PKG_VERSION:-$DEFAULT_PACKAGE_VERSION}; sed -i \"s/VERSION = '[^']*'/VERSION = '$VER'/\" lib/daytona_toolbox_api_client/version.rb && echo \"Changed version to $VER\"; else echo \"Using version from version.rb\"; fi"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "bundle exec rubocop"
      }
    },
    "generate:api-client": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn run openapi-generator-cli generate -i apps/daemon/pkg/toolbox/docs/swagger.json -g ruby --additional-properties=gemAuthor=daytonaio,gemAuthorEmail=support@daytona.io,gemDescription=\\\"Daytona Toolbox API Client\\\",gemHomepage=\\\"https://github.com/daytonaio/daytona\\\",gemName=daytona_toolbox_api_client -o libs/toolbox-api-client-ruby",
          "bash libs/toolbox-api-client-ruby/fix-gemspec.sh",
          "cd libs/toolbox-api-client-ruby && bundle install"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "openapi",
          "projects": "daemon"
        }
      ]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": ["bundle exec rubocop -a --fail-level=E", "prettier --write \"**/*.yml\""],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "mkdir -p ~/.gem && echo \":rubygems: $RUBYGEMS_API_KEY\" > ~/.gem/credentials && chmod 0600 ~/.gem/credentials",
          "gem push daytona_toolbox_api_client-*.gem --key rubygems --host https://rubygems.org"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    }
  }
}
