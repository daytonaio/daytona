# Daytona Production Environment Variables
# Copy this file to .env and customize the values

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
HOST_DOMAIN=win.trydaytona.com
PROXY_DOMAIN=preview.win.trydaytona.com

# =============================================================================
# DATABASE
# =============================================================================
DB_USERNAME=user
DB_PASSWORD=pass
DB_DATABASE=daytona

# =============================================================================
# REDIS (no authentication by default)
# =============================================================================
# REDIS_PASSWORD=

# =============================================================================
# OIDC / Authentication
# =============================================================================
# Public URL for OIDC provider (how browsers access Dex)
PUBLIC_OIDC_DOMAIN=https://win.trydaytona.com/dex

# =============================================================================
# DASHBOARD & API URLs
# =============================================================================
DASHBOARD_URL=https://win.trydaytona.com/dashboard
DASHBOARD_BASE_API_URL=https://win.trydaytona.com

# =============================================================================
# PROXY SERVICE
# =============================================================================
PROXY_API_KEY=super_secret_key_change_me

# =============================================================================
# RUNNER SERVICE
# =============================================================================
RUNNER_API_KEY=secret_api_token_change_me

# =============================================================================
# SSH GATEWAY
# =============================================================================
SSH_GATEWAY_API_KEY=ssh_secret_api_token_change_me

# SSH keys (base64 encoded)
# Generate new keys with: ssh-keygen -t rsa -b 3072 -f ssh_key -N ""
# Then encode: base64 -w 0 ssh_key > ssh_key.b64
SSH_PRIVATE_KEY=
SSH_HOST_KEY=
SSH_GATEWAY_PUBLIC_KEY=

# =============================================================================
# DOCKER REGISTRY
# =============================================================================
REGISTRY_PASSWORD=password

# =============================================================================
# MINIO (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# PGADMIN
# =============================================================================
PGADMIN_EMAIL=dev@daytona.io
PGADMIN_PASSWORD=pgadmin

# =============================================================================
# POSTHOG (Analytics - optional)
# =============================================================================
# POSTHOG_API_KEY=
# POSTHOG_HOST=
# POSTHOG_ENVIRONMENT=production
